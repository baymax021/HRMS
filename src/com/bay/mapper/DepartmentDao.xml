<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bay.dao.DepartmentDao">
    <resultMap id="departmentMap" type="Department">
        <id column="DEP_ID" property="depId"/>
        <result column="DEP_NAME" property="depName"/>
        <result column="DEP_STATUS" property="depStatus"/>
        <collection property="positionList" column="depId"  ofType="Position" />
    </resultMap>



    <select id="queryDepartment" parameterType="Department" resultMap="departmentMap">
        SELECT *FROM HRMS.DEPARTMENT
        <where>
            <if test="depId !=null"> AND DEP_ID =#{depId}</if>
        </where>
    </select>
    <select id="departmentList" resultMap="departmentMap">
        select * from DEPARTMENT
    </select>


</mapper>